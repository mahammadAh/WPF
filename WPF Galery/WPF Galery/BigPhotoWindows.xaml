<Window x:Class="WPF_Galery.BigPhotoWindows"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Galery"
        mc:Ignorable="d"
        Title="BigPhotoWindows" Height="500" Width="500">
    <Grid Background="Black">
        
        <Grid.RowDefinitions>
            <RowDefinition Height="4*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>


        <Image x:Name="imageBox" Grid.Row="0" Grid.ColumnSpan="2"></Image>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0" Click="Button_Click"
                    Margin="10"
                     FontSize="60"
                     Background="#FF9214"
                  >🠘</Button>

            <Button Grid.Column="1" Click="Button_Click_1"
                    Margin="10" 
                    FontSize="60"
                     Background="#FF9214"
                    >🠚</Button>
        </Grid>
    </Grid>
</Window>
